<script type="text/javascript">
    $(".input-touchspin").TouchSpin({
        min: 5,
        max: 760,
        stepinterval: 1
    });

    var before_str = 0;
    var before_agi = 0;
    var before_int = 0;
    var before_vit = 0;
    var before_wis = 0;
    var before_luk = 0;
    var available = 0;

    $('#str, #agi, #int, #vit, #wis, #luk').on('keyup change', function() {
        var str = $('#str').val() - 5;
        var agi = $('#agi').val() - 5;
        var int = $('#int').val() - 5;
        var vit = $('#vit').val() - 5;
        var wis = $('#wis').val() - 5;
        var luk = $('#luk').val() - 5;
        var available_point = $('#available_point').text();

        var total = str + agi + int + vit + wis + luk;
        var end = available - total;
        console.log('total: '+total);
        console.log('end: '+end);
        if(end < 0) {
            if($(this).attr('id') == 'str') {
                $('#str').val(before_str);
            }
            if($(this).attr('id') == 'agi') {
                $('#agi').val(before_agi);
            }
            if($(this).attr('id') == 'int') {
                $('#int').val(before_int);
            }
            if($(this).attr('id') == 'vit') {
                $('#vit').val(before_vit);
            }
            if($(this).attr('id') == 'wis') {
                $('#wis').val(before_wis);
            }
            if($(this).attr('id') == 'luk') {
                $('#luk').val(before_luk);
            }

            var str = $('#str').val() - 5;
            var agi = $('#agi').val() - 5;
            var int = $('#int').val() - 5;
            var vit = $('#vit').val() - 5;
            var wis = $('#wis').val() - 5;
            var luk = $('#luk').val() - 5;

            var total = str + agi + int + vit + wis + luk;
            var end = available - total;
            $('#available_point').text(end);

            Swal.fire({
                text: "You don't have enough available status point !",
                icon: 'error',
                confirmButtonColor: '#00C851',
                confirmButtonText: 'ตกลง',
                timer: 2500
            });

        } else {
            before_str = $('#str').val();
            before_agi = $('#agi').val();
            before_int = $('#int').val();
            before_vit = $('#vit').val();
            before_wis = $('#wis').val();
            before_luk = $('#luk').val();

            $('#available_point').text(end);
        }
    });

    $("#char_name").on('change', function() {
        var val = $(this).val();

        $.ajax({
            type: "POST",
            dataType: "JSON",
            url: "system/api/statusreset.php",
            data: {
                char_name: val,
                check: 1,
            },
            success: function(data) {
                console.log(data);
                $(".view-status-msg").hide();
                $(".view-status").show();
                if(data == 'Fuck') {
                    $(".view-status").hide();
                }
                else if(data.levelup_point == 0) {
                    $(".view-status").hide();
                    $(".view-status-msg").show();
                    $(".view-status-msg").text("You don't have enough available status point !");
                }
                else {
                    available = data.levelup_point;

                    $("#available_point").text(data.levelup_point);
                    $("#str").val(data.strength);
                    $("#agi").val(data.dexterity);
                    $("#int").val(data.intelligence);
                    $("#vit").val(data.mentality);
                    $("#wis").val(data.constitution);
                    $("#luk").val(data.sense);
                }

                before_str = $('#str').val();
                before_agi = $('#agi').val();
                before_int = $('#int').val();
                before_vit = $('#vit').val();
                before_wis = $('#wis').val();
                before_luk = $('#luk').val();
            },
            error: function(data) {},
        });
    });

    $("#setstatus").submit(function(e) {
        e.preventDefault();
        var char_name = $("#char_name").val();
        if (char_name == "") {
            Swal.fire({
                text: 'Please choose character',
                icon: 'error',
                confirmButtonColor: '#00C851',
                confirmButtonText: 'ตกลง',
                timer: 2500
            })
        } else {
            Swal.fire({
                title: 'คุณแน่ใจมั้ย?',
                text: "คุณต้องการรีเซ็ตสถานะหรือไม่!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#00C851',
                cancelButtonColor: '#d33',
                cancelButtonText: 'ไม่',
                confirmButtonText: 'ใช่'
            }).then((result) => {
                if (result.value) {
                    if($('#available_point').text() < 0) {
                        Swal.fire({
                            text: "You don't have enough available status point !",
                            icon: 'error',
                            confirmButtonColor: '#00C851',
                            confirmButtonText: 'ตกลง',
                            timer: 2500
                        });
                    } else {
                        $.ajax({
                            type: "POST",
                            url: "system/api/statusreset.php",
                            data: $("#setstatus").serialize(),
                            success: function(data) {
                                if (data == "success") {
                                    Swal.fire({
                                        text: 'รีเซ็ตสถานะสำเร็จ!',
                                        icon: 'success',
                                        timer: 2500,
                                        confirmButtonColor: '#00C851',
                                        confirmButtonText: 'ตกลง'
                                    }).then((result) => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        text: data,
                                        icon: 'error',
                                        timer: 3500,
                                        confirmButtonColor: '#00C851',
                                        confirmButtonText: 'ตกลง'
                                    })
                                }
                            }
                        });
                    }
                }
            })
        }
    });

    $("#statusreset").submit(function(e) {
        e.preventDefault();
        var char_name = $("#char_name").val();
        if (char_name == "") {
            Swal.fire({
                text: 'Please choose character',
                icon: 'error',
                confirmButtonColor: '#00C851',
                confirmButtonText: 'ตกลง',
                timer: 2500
            })
        } else {
            Swal.fire({
                title: 'คุณแน่ใจมั้ย?',
                text: "คุณต้องการรีเซ็ตสถานะหรือไม่!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#00C851',
                cancelButtonColor: '#d33',
                cancelButtonText: 'ไม่',
                confirmButtonText: 'ใช่'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        type: "POST",
                        url: "system/api/statusreset.php",
                        data: {
                            char_name: char_name,
                        },
                        success: function(data) {
                            if (data == "success") {
                                Swal.fire({
                                    text: 'รีเซ็ตสถานะสำเร็จ!',
                                    icon: 'success',
                                    timer: 2500,
                                    confirmButtonColor: '#00C851',
                                    confirmButtonText: 'ตกลง'
                                }).then((result) => {
                                    window.location.href = "./home";
                                });
                            } else {
                                Swal.fire({
                                    text: data,
                                    icon: 'error',
                                    timer: 3500,
                                    confirmButtonColor: '#00C851',
                                    confirmButtonText: 'ตกลง'
                                })
                            }
                        }
                    });
                }
            })
        }
    });
</script>