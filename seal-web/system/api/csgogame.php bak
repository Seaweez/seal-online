<?php
include '../oop.php';
$por = new seal;
// ปรับราคาเกม ************************************
$point = 150;
error_reporting(E_ALL);
ini_set('display_errors', 1);

require_once '../config.php';

// Random Types:
// - none = ไม่ได้อะไรเลย
// - credit|1|15 = ได้รับเครดิต 1 - 15
// - stock|1 = ได้รับรางวัล ID 1

function dd_rand($array)
{
    $rand = (float)rand() / (float)getrandmax();
    $result = array_keys($array, max($array))[0];
    foreach ($array as $value => $percent) {
        $percent = $percent / 100;
        if ($rand < $percent) {
            $result = $value;
            break;
        }
        $rand -= $percent;
    }
    return $result;
}

function dd_return($status, $message, $index = null)
{
    $json = ['message' => $message];
    if ($status) {
        http_response_code(200);
        if (isset($index)) $json['index'] = $index;
        die(json_encode($json));
    } else {
        http_response_code(400);
        die(json_encode($json));
    }
}


//////////////////////////////////////////////////////////////////////////

header('Content-Type: application/json; charset=utf-8;');

// is POST
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    // is logged-in user
    if (isset($_SESSION['username'])) {
        $userinfo = $por->userinfo();
        $uid = $userinfo['id'];
        if ($uid) {
            if ($userinfo['point'] < $point) {
                dd_return(false, "ยอดเงินคงเหลือไม่เพียงพอ");
            }

            // ดึงรายการรางวัล
            $rewards = array();
            $q = dd_q('SELECT * FROM csgo_chance WHERE chance > 0');
            if ($q !== false) {
                $chances = $q->fetchAll();
                foreach ($chances as $c) {
                    $rewards["{$c['rw_type']}"] = (int)$c['chance'];
                }
            }

            if ($userinfo['point'] >= $point) {

                // พบ % หรือไม่
                if (count($rewards) > 0) {
                    // หัก credit และ เริ่มการสุ่ม...
                    $q = $por->decresePoint($point);

                    // สุ่ม พร้อม เปอร์เซ็นต์
                    $result = dd_rand($rewards);

                    // เป็นตัวบอก ID ในฝั่ง Javascript เช่น stock|1 จะแสดงเป็น stock_1
                    $result_parsed = str_replace('|', '_', $result);

                    if ($result == 'none') {
                        // history
                        dd_q('INSERT INTO random_history (user_id, game_name, item_name, item_detail, date) VALUES (?, ?, ?, ?, ?)', [$uid, 'seal', 'ไม่ได้รางวัล', "-", date('Y-m-d H:i:s')]);

                        dd_return(true, 'คุณไม่ได้รับอะไรเลย.. ไว้ลองกันใหม่', $result_parsed);
                    } elseif (strpos($result, '|') !== false) {

                        $result = explode('|', $result);
                        if ($result[0] == 'credit') {
                            // random min-max
                            $random = mt_rand($result[1], $result[2]);
                            //increse_point
                            $q = $por->incresePoint($random);
                            // history
                            dd_q('INSERT INTO random_history (user_id, game_name, item_name, item_detail, date) VALUES (?, ?, ?, ?, ?)', [$uid, 'seal', 'Point', "ได้รับเครดิต +{$random}", date('Y-m-d H:i:s')]);
                            // return พร้อมแจ้ง Index
                            dd_return(true, "คุณได้รับ {$random} Point!", $result_parsed);
                        } elseif ($result[0] == 'stock') {
                            // reward id
                            $stock_id = $result[1];

                            // get name
                            $stock_name = null;
                            $q = dd_q('SELECT name FROM random_rewards WHERE id = ? LIMIT 1', [$stock_id]);
                            if ($q !== false) {
                                $stock_name = @$q->fetch()[0];
                            }

                            // get quantity
                            $stock_quantity = null;
                            $q = dd_q('SELECT quantity FROM random_rewards WHERE id = ? LIMIT 1', [$stock_id]);
                            if ($q !== false) {
                                $stock_quantity = @$q->fetch()[0];
                                $inventory = $por->fetchStore();

                                for ($i = 0; $i <= 79; $i++) {
                                    if ($inventory['it' . $i] == 0) {
                                        $por->updateStore($_SESSION['username'], $i, $stock_id, $stock_quantity);
                                        $message = (isset($stock_name)) ? $stock_name : 'อะไรก็ไม่รู้นิ';
                                        // history
                                        dd_q('INSERT INTO random_history (user_id, game_name, item_name, item_detail, date) VALUES (?, ?, ?, ?, ?)', [$uid, 'seal', $message, "{$stock_name}: {$stock_quantity}", date('Y-m-d H:i:s')]);
                                        dd_return(true, "คุณได้รับ {$message}!", $result_parsed);
                                    }
                                }
                            }
                        }
                    }
                }
                dd_return(false, 'ขณะนี้ระบบสุ่มยังไม่พร้อมใช้งาน');
            }
            dd_return(false, 'ยอดเงินคงเหลือไม่เพียงพอ');
        }
        dd_return(false, 'ไม่พบชื่อผู้ใช้งาน');
    }
    dd_return(false, 'โปรดเข้าสู่ระบบก่อนทำการสุ่ม');
}
dd_return(false, "Method '{$_SERVER['REQUEST_METHOD']}' not allowed!");
